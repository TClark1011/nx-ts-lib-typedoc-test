{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": false,
    "types": ["node"],
    "paths": {
      "$utils$": ["./src/utils.js"]
    }
  },
  "include": ["src/**/*.ts", "./eslint.config.mjs"],
  "references": [],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ]
}
